{% extends '@SyliusShop/layout.html.twig' %}

{% form_theme searchForm '@SyliusUi/Form/theme.html.twig' %}

{% import '@SyliusUi/Macro/messages.html.twig' as messages %}
{% import '@SyliusUi/Macro/pagination.html.twig' as pagination %}

{% block content %}
    <h1 class="ui monster section dividing header">
        {{ 'bitbag_sylius_elasticsearch_plugin.ui.search_header'|trans }}
    </h1>

    <div class="twelve wide column">
        <div class="ui two column stackable grid" id="products">
            <div class="column">
                <h3> Result for category </h3>
                {% if taxons|length > 0 %}
                    <ul>
                        {% for taxon in taxons %}
                            <li><a href="${taxon.slug}">{{ taxon.parent }} / {{ taxon.name }}</a></li>
                        {% endfor %}
                    </ul>
                {% else %}
                    {{ messages.info('sylius.ui.no_results_to_display') }}
                {% endif %}
            </div>
            <div class="column">
                <h3> Result for articles </h3>
                {% if articles|length > 0 %}
                        {% for article in articles %}
                            <div class="ui fluid">
                                <a class="header" href="{{ path('odiseo_sylius_blog_plugin_shop_article_show', {'slug' : article.slug}) }}">
                                    {% if article.images|length > 0 %}
                                        <img src="{{ article.images[0].path|imagine_filter(filter|default('sylius_shop_product_tiny_thumbnail')) }}" class="ui bordered image" alt="{{ article.images[0].path }}">
                                    {% endif %}
                                    <div class="content">
                                        {{article.title}}
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                {% else %}
                    {{ messages.info('sylius.ui.no_results_to_display') }}
                {% endif %}
            </div>
        </div>
    </div>

    <h3> Result for product </h3>
    <div class="ui stackable grid">
        <div class="four wide column">
            <div id="filters-vertical" class="ui fluid vertical menu">
                <div class="header item">
                    {{ 'bitbag_sylius_elasticsearch_plugin.ui.filter_results'|trans }}
                </div>
                {{ form_start(searchForm, {'attr': {'class': 'ui loadable form', 'novalidate': 'novalidate'}}) }}
                    <div style="display: none;">
                        {{ form_row(searchForm.box) }}
                    </div>
                    <div class="item">
                        {{ form_rest(searchForm) }}
                    </div>
                    <div class="item">
                        <button type="submit" class="ui primary icon labeled button" style="width: 100%;">
                            <i class="search icon"></i>
                            {{ 'bitbag_sylius_elasticsearch_plugin.ui.filter'|trans }}
                        </button>
                    </div>
                {{ form_end(searchForm) }}
            </div>
        </div>
        <div class="twelve wide column">
            {% if results|length > 0 %}
                <div class="ui three column stackable grid" id="search_results">
                    {% for product in results %}
                        <div class="column result">
                            {% include '@SyliusShop/Product/_box.html.twig' %}
                        </div>
                    {% endfor %}
                </div>
                <div class="ui hidden divider"></div>

                {{ pagination.simple(results) }}
            {% else %}
                {{ messages.info('sylius.ui.no_results_to_display') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
